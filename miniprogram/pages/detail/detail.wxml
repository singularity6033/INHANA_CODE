<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="content">INHANA英翰语言戏剧</view>
</cu-custom>

<wxs src="../../wxs/common.wxs" module="common"/>
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{2}}" wx:key bindtap="tabSelect" data-id="{{index}}" wx:if="{{index==0}}">
      <text>教学视频 \n Free Online Courses</text>
    </view>
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{2}}" wx:key bindtap="tabSelect" data-id="{{index}}" wx:if="{{index==1}}">
      <text>付费资源 \n Paid Online Courses</text>
    </view>
  </view>
</scroll-view>

<view class="idxCon" wx:for="{{LectureList}}" wx:key="index" wx:if="{{TabCur==0}}">
    <view class="row cu-bar bg-white margin-top-sm" bindtap="FreeLectureDetail" data-index="{{index}}">
        <view class="rowTxt"> 
          <view class="title text-black text-bold text-left">{{item.title}}</view>
          <view class="info text-gray">
            共包含{{item.number}}个视频
          </view>
          <view class="info text-bold text-red margin-bottom-xs text-shadow text-price text-left">
            {{item.price}}
          </view>
        </view>
        <view class="rowPic">
          <image mode="aspectFit" src="{{item.total_cover_url}}" class="img"></image>
          <image mode="aspectFit" src="../../images/lock_on.png" class="img1"></image>
        </view>
  </view> 
</view>

<view class="idxCon" wx:for="{{LectureList}}" wx:key="index" wx:if="{{TabCur==1}}">
    <view class="row cu-bar bg-white margin-top-sm" bindtap="ChargedLectureDetail" data-index="{{index}}">
        <view class="rowTxt">
          <view class="title text-black text-bold text-left">{{item.title}}</view>
          <view class="info text-gray">
            共包含{{item.number}}个视频
          </view>
          <view class="info text-bold text-red margin-bottom-xs text-shadow text-price text-left">
            {{item.price}}
          </view>
        </view>
        <view class="rowPic">
          <image mode="aspectFit" src="{{item.total_cover_url}}" class="img"></image>
          <image mode="aspectFit" src="{{isPay[index]?'../../images/lock_on.png':'../../images/lock_off.png'}}" class="img1"></image>
        </view>
  </view> 
</view>
