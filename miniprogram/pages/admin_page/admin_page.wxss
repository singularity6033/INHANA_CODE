.idxCon {
  padding-right: 20rpx;
  padding-left: 20rpx;
}
.idxCon .row {
  display: flex;
  border-bottom: 1px solid #eeeeee;
  padding: 20rpx 0;
  height: 230rpx;
  justify-content: space-between;
}
.idxCon .row .rowTxt { 
  height: 100%;
  width: 100%;
}

.idxCon .row .rowTxt .title {
  font-size: 32rpx;
  margin-bottom: 40rpx;
  margin-left:20rpx;
  height: 100rpx;
}
.idxCon .row .rowTxt .info {
  font-size: 30rpx;
  margin-left:20rpx;
  columns: #999999;
}
.idxCon .row .rowPic {
  height: 100%;
  width: 32%;
}
.idxCon .row .rowPic .img {
  height: 100%;
  width: 100%;
}
