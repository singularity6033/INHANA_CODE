.img{
  height:100%;
  width:100%;
}

.flex{
  float: left;
  width: 100%;
  position: relative;
}
.audioPlayer{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background: #ffffff;
}
.player{
  width: 100%;
  height: 100%;
  position: relative;
}
.audioControls{
  width: 100%;
  height: 150rpx;
  font-size: 6pt;
  text-align: center;
  border-radius: 25rpx;
}
.audioControls .bottom{
  width: 84rpx;
  height: 100%;
  float: left;
}
.audioControls .bottom image{
  margin-top: 30rpx;
  margin-left: 15rpx;
  width: 84rpx;
  height: 84rpx;
}
.audioControls .slider{
  width: calc(80% - 25rpx);
  margin-top: 45rpx;
  height: 100%;
  float: right;
}
.slider slider{
  width: 95%;
  margin-left: 4%;
  margin-right: 0;
}
.audioControls .time{
  width: calc(100% - 104rpx);
  height: 70rpx;
  position: absolute;
  bottom: 0px;
  right: 0px;
  font-size: 18px;
  color: #292626;
}
.timeLeft{
  float: left;
  padding-left: 20rpx;
  height: 10px;
}
.timeRight{
  float: right;
  padding-right: 35rpx;
  height: 10px;
}

.Border{
  border-color: #292626;
}

page{
  background: #ffffff;
}