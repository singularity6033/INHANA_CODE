<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="content">学习资源</view>
  <view slot="backText" class="margin-lg text-xl" bindtap="backToHome">
    <text class="cuIcon-home"></text>
  </view>
</cu-custom>

<wxs src="../../wxs/common.wxs" module="common"/>
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{2}}" wx:key bindtap="tabSelect" data-id="{{index}}" wx:if="{{index==0}}">
      <text>教学视频</text>
    </view>
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{2}}" wx:key bindtap="tabSelect" data-id="{{index}}" wx:if="{{index==1}}">
      <text>其他资料</text>
    </view>
  </view>
</scroll-view>

<view class="idxCon" wx:for="{{OnlineLectureList}}" wx:key="index" wx:if="{{TabCur==0}}">
    <view class="row cu-bar bg-white margin-top-sm" bindtap="LectureDetail" data-index="{{index}}">
        <view class="rowTxt"> 
          <view class="title text-black text-bold text-left">{{item.title}}</view>
          <view class="info text-gray">
            共包含{{item.number}}个视频
          </view>
        </view>
        <view class="rowPic">
          <image mode="aspectFit" src="{{item.total_cover_url}}" class="img"></image>
        </view>
  </view> 
</view>

<view class="idxCon" wx:for="{{OnlineFileList}}" wx:key="index" wx:if="{{TabCur==1}}">
    <view class="row cu-bar bg-white margin-top-sm" bindtap="FileDetail" data-index="{{index}}">
        <view class="rowTxt">
          <view class="title text-black text-bold text-left">{{item.title}}</view>
          <view class="info text-red">
            点击查看详情
          </view>
        </view>
        <view class="rowPic">
          <image mode="aspectFit" src="{{item.total_cover_url}}" class="img"></image>
        </view>
  </view> 
</view>
