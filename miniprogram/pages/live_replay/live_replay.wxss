/* pages/class_detail/class_detail.wxss *//* pages/class_main/class_main.wxss */
page {
  background-color: white;
}
 
.videoView {
  position: relative;
  margin: 40rpx 50rpx 30rpx;
}
 
.video {
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx;
  box-shadow: 2px 3px 10px #6b6b6b;
}
 
.text {
  margin-left: 40rpx;
  margin-right: 20rpx;
  font-size: 36rpx;
  font-weight: 650;
  /* font-family: NSimSun; */
}
 
.aline {
  margin-top: 40rpx;
  height: 1rpx;
  border-top: solid #000 1px;
  width: 100%;
}
 
.time {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  color: white;
  font-size: 33rpx;
}
.zanBox {
  width: 100rpx;
  height: 100rpx;
  background-color: #a6d7ee;
  border-radius: 50%;
  margin: 50rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.zanBox .img2 {
  width: 50%;
  height: 50%;
  display: block;
}
.zanBox .num {
  color: #fff;
}